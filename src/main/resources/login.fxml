<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="easy.invest.controllers.LoginController">
    <children>
        <AnchorPane layoutX="14.0" layoutY="145.0" prefHeight="244.0" prefWidth="650.0">
            <children>
                <ImageView fitHeight="400.0" fitWidth="650.0" layoutX="-5.0" layoutY="-140.0" pickOnBounds="true">
                    <image>
                        <Image url="@poza_login.jpg" />
                    </image>
                </ImageView>
                <Button layoutX="7.0" layoutY="105.0" onAction="#goToRegistration" text="Register">
                    <font>
                        <Font name="System Bold" size="18" />
                    </font>
                </Button>
                <Button layoutX="6.0" layoutY="50.0" onAction="#login" text="Log in">
                    <font>
                        <Font name="System Bold" size="18" />
                    </font>
                </Button>
                <HBox alignment="bottom_right" layoutX="20.0" layoutY="265.0" prefHeight="16.0" prefWidth="100.0" spacing="10" />

                <Label layoutX="10.0" layoutY="26.0" prefHeight="35.0" prefWidth="51.0">
                    <font>
                        <Font name="System Bold" size="18" />
                    </font>
                </Label>

                <TextField fx:id="usernameField" layoutY="-70.0" />

                <Label layoutX="6.0" layoutY="-34.0" text="Password:" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="18" />
                    </font>
                </Label>

                <Label layoutX="6.0" layoutY="-95.0" text="Username:" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="18" />
                    </font>
                </Label>

                <PasswordField fx:id="passwordField" />
            </children>
        </AnchorPane>
        <Text id="title-text" fill="WHITE" layoutX="82.0" layoutY="35.0" smooth="false" text="Easy Invest">
            <font>
                <Font name="System Bold" size="18" />
            </font>
        </Text>
    </children>
</AnchorPane>
